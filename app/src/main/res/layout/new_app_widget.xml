<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#4B6066"
    android:padding="@dimen/widget_margin"
    >

    <Button
        android:id="@+id/refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="refresh"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:textColor="#4B6066"
       ></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
       >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/schedule_alap_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oda:"
        android:textColor="#ffffff"
        android:textSize="24dp"></TextView>

        <TextView
android:layout_toLeftOf="@id/felso_fogaskerek"
            android:id="@+id/schedule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"

            android:textSize="24sp"

            />
    <ImageButton
android:id="@+id/felso_fogaskerek"
        android:layout_gravity="right"
     android:src="@drawable/ic_settings_black_24dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:textSize="24sp"
        android:layout_margin="10dp"
        android:padding="10dp"


        />
</RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/real_alap_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:text="Vissza:"
            > </TextView>

        <TextView
            android:id="@+id/real_text"
            android:layout_toLeftOf="@id/also_fogaskerek_hely"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="24dp"



            > </TextView>

            <ImageView
                android:id="@+id/also_fogaskerek_hely"
                android:layout_gravity="right"

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:textSize="24sp"
                android:layout_margin="10dp"


                />
    </RelativeLayout>
    </LinearLayout>


</LinearLayout>